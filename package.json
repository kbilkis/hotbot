{
  "name": "git-messaging-scheduler",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "deploy": "pnpm run build && wrangler deploy --env=\"\" --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
    "deploy:production": "pnpm run build && wrangler deploy --env=\"production\" --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
    "build:client": "vite build",
    "build:server": "wrangler build",
    "build:functions": "node esbuild.functions.config.js",
    "notification-processor": "tsx --env-file=.env src/scripts/notification-processor.ts",
    "token-processor": "tsx --env-file=.env src/scripts/token-processor.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "vite-analyzer": "ANALYZE=true vite build",
    "knip": "knip",
    "sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=bilkis --project=hotbot-be && sentry-cli sourcemaps upload --org=bilkis --project=hotbot-be --release=$_SENTRY_RELEASE --strip-prefix 'dist/hotbot/assets..' dist/hotbot/assets",
    "postdeploy": "pnpm sentry:sourcemaps"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.51.0",
    "@heroicons/react": "^2.2.0",
    "@hono/arktype-validator": "^2.0.1",
    "@hono/clerk-auth": "^3.0.3",
    "@libsql/client": "^0.15.15",
    "@sentry/cloudflare": "^10.19.0",
    "@sentry/esbuild-plugin": "^4.4.0",
    "@sentry/google-cloud-serverless": "^10.19.0",
    "@sentry/react": "^10.19.0",
    "@sentry/vite-plugin": "^4.3.0",
    "@upstash/redis": "^1.35.4",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/recipes": "^0.5.7",
    "arktype": "^2.1.22",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.3.0",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "preact": "^10.27.2",
    "preact-iso": "^2.11.0",
    "preact-render-to-string": "^6.6.1",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react/jsx-runtime": "npm:@preact/compat",
    "stripe": "^18.5.0",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.12",
    "@cloudflare/workers-types": "^4.20250919.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@google-cloud/functions-framework": "^3.5.1",
    "@hono/vite-dev-server": "^0.23.0",
    "@preact/preset-vite": "^2.10.2",
    "@sentry/cli": "^2.39.0",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^22.18.6",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.3",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "knip": "^5.64.1",
    "playwright": "^1.55.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  }
}
