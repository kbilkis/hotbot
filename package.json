{
  "name": "git-messaging-scheduler",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:wrangler": "concurrently \"wrangler dev --env development --port 8787\" \"vite\"",
    "dev:server": "tsx watch --env-file=.env dev-server.ts",
    "dev:client": "vite",
    "build": "node esbuild.config.js && vite build",
    "deploy": "wrangler deploy",
    "build:client": "vite build",
    "build:server": "node esbuild.config.js",
    "build:lambda": "node esbuild.lambda.config.js && cd dist_lambda && zip -r cron-handler.zip cron-handler.js cron-handler.js.map",
    "cron": "tsx --env-file=.env src/scripts/run-cron.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.47.0",
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@heroicons/react": "^2.2.0",
    "@hono/arktype-validator": "^2.0.1",
    "@hono/clerk-auth": "^3.0.3",
    "@neondatabase/serverless": "^1.0.1",
    "@upstash/redis": "^1.35.4",
    "arktype": "^2.1.22",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.3.0",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.1",
    "stripe": "^18.5.0",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250919.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@hono/node-server": "^1.19.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  }
}
